# ========================================
# ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env and fill with your actual values

# Spring Profiles
SPRING_PROFILES_ACTIVE=prod

# ========================================
# DATABASE - PostgreSQL
# ========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_password
POSTGRES_PORT=5432

# ========================================
# DATABASE - MongoDB
# ========================================
MONGO_ROOT_USER=root
MONGO_ROOT_PASSWORD=change_this_password
MONGO_PORT=27017

# ========================================
# MESSAGE BROKER - RabbitMQ
# ========================================
RABBITMQ_USER=guest
RABBITMQ_PASS=change_this_password
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672

# ========================================
# MICROSERVICES PORTS
# ========================================
API_GATEWAY_PORT=8080
FRONTEND_PORT=80

# ========================================
# SECURITY
# ========================================
# JWT Secret (must be at least 32 characters)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ========================================
# FRONTEND CONFIGURATION
# ========================================
# For local development
# VITE_API_BASE_URL=http://localhost:8080
# VITE_GATEWAY_URL=http://localhost:8080

# For production (use your EC2 public IP or domain)
VITE_API_BASE_URL=http://YOUR_EC2_PUBLIC_IP:8080
VITE_GATEWAY_URL=http://YOUR_EC2_PUBLIC_IP:8080
